<view class="main">

  <view class="login-icon">
    <image class="login-img" src="../resouce/user.png"></image>
  </view>
  <view class="login-form">
    <form bindsubmit="doLogin">
      <view class="inputView">
        <image class="nameImage" src="../resouce/login.png"></image>
        <label class="loginLable">账号</label>
        <input name="username" class="inputText" placeholder="请输入账号"/>
      </view>
      <view class="line"></view>
      <view class="inputView">
        <image class="keyImage" src="../resouce/password.png"></image>
        <label class="loginLable">密码</label>
        <input name="password" class="inputText" password="true" placeholder="请输入密码"/>
      </view>
      <view>
        <button class="loginBtn" type="primary" form-type='submit'>登录</button>
      </view>
      <view>
        <button class="goRegistBtn" type="warn" bindtap="goRegistBtn">未注册？点击注册</button>
      </view>
    </form>
  </view>
  <!--按钮-->
  


</view>